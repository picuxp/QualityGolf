@model IEnumerable<QualityGolf.Models.Usuario>

@{
    ViewData["Title"] = "Usuarios";
}

<h2>Usuarios</h2>

<p>
    <a class="btn btn-primary" data-toggle="modal" data-target="#modalAgregar">Crear Nuevo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Usuarios
            </th>

            <th>
                Rol
            </th>

            <th>
                Email
            </th>


            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Role)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>



                <td>
                    <a class="btn btn-success btn-sm" data-toggle="modal" data-target="#modalEditar" onclick="getUsuario('@item.Id','Usuarios/GetUsuario')">Editar</a> |
                    <a class="btn btn-info btn-sm" data-toggle="modal" data-target="#modalDetalle" onclick="getUsuario('@item.Id','Usuarios/GetUsuario')">Ver detalles</a> |
                    <a class="btn btn-danger btn-sm" data-toggle="modal" data-target="#modalEliminar" onclick="getUsuario('@item.Id','Usuarios/GetUsuario')">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>




<!-- Modal editar -->
<div class="modal fade" id="modalEditar" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">Editar datos</h4>
            </div>
            <div class="modal-body">

                <form>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" name="Id" id="Id" />
                    <div class="form-group">
                        <label for="UserName" class="control-label">Usuario</label>
                        <input readonly name="UserName" id="UserName" class="form-control" />
                    </div>

                    <div class="form-group">
                        <label for="Roles" class="control-label">Roles</label>
                        <select name="Select" id="Select" class="form-control" onclick="getRoles('Usuarios/GetRoles');">
                            <option value="0"> Seleccione un rol</option>

                        </select>
                    </div>

                    <div class="form-group">
                        <label for="Email" class="control-label">Email</label>
                        <input name="Email" id="Email" class="form-control" />
                    </div>








                </form>



            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-primary" onclick="editarUsuario('Usuarios/EditUsuario')">Guardar cambios</button>
            </div>
        </div>
    </div>
</div>

<!-- Modal detalles -->
<div class="modal fade" id="modalDetalle" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">Ver datos</h4>
            </div>
            <div class="modal-body">

                <input type="hidden" name="Id" id="Id" />
                <div class="form-group">
                    <label for="UserName" class="control-label">Usuario</label>
                    <p id="dUserName">Usuario 1</p>
                </div>

                <div class="form-group">
                    <label for="Roles" class="control-label">Roles</label>
                    <p id="dRole">rol</p>
                </div>

                <div class="form-group">
                    <label for="Email" class="control-label">Email</label>
                    <p id="dEmail">Email 1</p>
                </div>





            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-success" data-target="#modalEditar" data-toggle="modal" onclick="ocultarDetalleUsuario()">Editar</button>
            </div>
        </div>
    </div>
</div>



<!-- Modal Eliminar -->
<div class="modal fade" id="modalEliminar" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">Seguro desea eliminar al usuario?</h4>
            </div>
            <div class="modal-body">

                <h3 id="eUsuario"> </h3>
                <input type="hidden" name="EIdUsuario" />

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-danger" onclick="eliminarUsuario('Usuarios/DeleteUsuario')">Eliminar</button>
            </div>
        </div>
    </div>
</div>



<!-- Modal agregar-->
<div class="modal fade" id="modalAgregar" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">Agregar usuario</h4>
            </div>
            <div class="modal-body">

                <form>


                    <div class="form-group">
                        <label for="Roles" class="control-label">Roles</label>
                        <select name="SelectNuevo" id="SelectNuevo" class="form-control" onclick="getRoles('Usuarios/GetRoles');">
                            <option value="0"> Seleccione un rol</option>

                        </select>
                    </div>

                    <div class="form-group">
                        <label for="EmailNuevo" class="control-label">Email</label>
                        <input name="EmailNuevo" id="EmailNuevo" class="form-control" />
                    </div>


                    <div class="form-group">
                        <label for="PasswordHashNuevo" class="control-label">password</label>
                        <input type="password" name="PasswordHashNuevo" id="PasswordHashNuevo" class="form-control" />
                    </div>
                    <div class="form-group">
                        <p id="mensajeNuevo"></p>
                    </div>
                    
                </form>



            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-primary" onclick="crearUsuario('Usuarios/CreateUsuario')">Registrar</button>
            </div>
        </div>
    </div>
</div>
