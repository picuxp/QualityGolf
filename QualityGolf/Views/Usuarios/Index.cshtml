@model QualityGolf.ViewModels.PlanParaUsuarioNuevo

@{
    ViewData["Title"] = "Usuarios";
}

<h2>Usuarios</h2>

<p>
    <a class="btn btn-primary" data-toggle="modal" data-target="#modalAgregar">Crear Nuevo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Usuarios
            </th>
            <th>
                Nombre
            </th>
            <th>
                Apellido
            </th>

            <th>
                Rol
            </th>

            <th>
                Email
            </th>


            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Usuarios)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
               
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)

                </td>

                <td>

                    @Html.DisplayFor(modelItem => item.Apellido)

                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Role)
                </td>
                
                

                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>



                <td>
                    <a class="btn btn-success btn-sm" data-toggle="modal" data-target="#modalEditar" onclick="getUsuario('@item.Id','Usuarios/GetUsuario')">Editar</a> |
                    <a class="btn btn-info btn-sm" data-toggle="modal" data-target="#modalDetalle" onclick="getUsuario('@item.Id','Usuarios/GetUsuario')">Ver detalles</a> |
                    <a class="btn btn-danger btn-sm" data-toggle="modal" data-target="#modalEliminar" onclick="getUsuario('@item.Id','Usuarios/GetUsuario')">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>




<!-- Modal editar -->
<div class="modal fade" id="modalEditar" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header" style="background-color: lightblue; text-align: center; color: white">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">Editar datos</h4>
            </div>
            <div class="modal-body">

                <form>
                    <div class="row">

                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" name="Id" id="Id" />
                        <div class="form-group col-sm-4">
                            <label for="UserName" class="control-label">Usuario</label>
                            <input readonly name="UserName" id="UserName" class="form-control" />
                        </div>

                        <div class="form-group col-sm-4">
                            <label for="Email" class="control-label">Email</label>
                            <input name="Email" id="Email" class="form-control" />
                        </div>

                        <div class="form-group col-sm-4">
                            <label for="Roles" class="control-label">Roles</label>
                            <select name="Select" id="Select" class="form-control" onclick="getRoles('Usuarios/GetRoles');">
                                <option value="0"> Seleccione un rol</option>

                            </select>
                        </div>

                    </div>

                    <div class="row">

                        <div class="form-group col-sm-6">
                            <label for="Nombre" class="control-label">Nombre</label>
                            <input name="Nombre" id="Nombre" class="form-control" />
                        </div>

                        <div class="form-group col-sm-6">
                            <label for="Apellido" class="control-label">Apellido</label>
                            <input name="Apellido" id="Apellido" class="form-control" />
                        </div>


                    </div>

                    <div class="row">
                        <div class="form-group col-sm-4">
                            <label for="Nacionalidad" class="control-label">Nacionalidad</label>
                            <input name="Nacionalidad" id="Nacionalidad" class="form-control" />
                        </div>

                        <div class="form-group col-sm-4">
                            <label for="Dni" class="control-label">DNI</label>
                            <input name="Dni" id="Dni" class="form-control" />
                        </div>

                        <div class="form-group col-sm-4">
                            <label for="Sexo" class="control-label">Sexo</label>
                            <select name="Sexo" id="Sexo" class="form-control">
                                <option>Masculino</option>
                                <option>Femenino</option>
                                <option>Otro</option>
                            </select>
                        </div>

                    </div>

                    <div class="row">

                       

                        <div class="form-group col-sm-4">
                            <label for="Direccion" class="control-label">Dirección</label>
                            <input name="Direccion" id="Direccion" class="form-control" />
                        </div>

                        <div class="form-group col-sm-4">
                            <label for="Localidad" class="control-label">Localidad</label>
                            <input name="Localidad" id="Localidad" class="form-control" />
                        </div>

                    <div class="form-group col-sm-2">
                        <label for="CodigoPostal" class="control-label">CP</label>
                        <input name="CodigoPostal" id="CodigoPostal" class="form-control" />
                    </div>
                    
                    <div class="form-group col-sm-2">
                        <label for="PhoneNumber" class="control-label">Teléfono</label>
                        <input name="PhoneNumber" id="PhoneNumber" class="form-control" />
                    </div>
                    
                    </div>

                    
                    <div class="row">
                        <div class="form-group col-sm-4">
                            <label for="TipoPlan" class="control-label">Plan</label>
                            <select name="TipoPlan" id="TipoPlan" class="form-control">
                                <option>Platinum</option>
                                <option>Gold</option>
                                <option>Silver</option>
                                <option>Step</option>
                                <option>Carrera Mensual</option>
                                <option>Intensivo</option>
                                <option>Carrera Anual</option>
                            </select>
                        </div>
    

                        <div class="form-group col-sm-4">
                            <label for="TipoSuscripcion" class="control-label">Tipo de Suscripción</label>
                            <select name="TipoSuscripcion" id="TipoSuscripcion" class="form-control">
                                <option>Anual</option>
                                <option>Semestral</option>
                                <option>Mensaul</option>
                            </select>
                        </div>
                        
                    </div>


                </form>



            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-primary" onclick="editarUsuario('Usuarios/EditUsuario')">Guardar cambios</button>
            </div>
        </div>
    </div>
</div>

